<%- include('includes/header.ejs') %>
    <div class="container" class="m-6">
        <%if(data.length>0){%>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Content</th>
                    </tr>
                </thead>
                <tbody>
                    <%for(let x of data){%>
                        <tr>
                            <td>
                                <%=x.title%>
                            </td>
                            <td>
                                <%=x.content%>
                            </td>
                            <td>
                                <form action="/update/<%=x._id%>/" method="get" class="m-3">
                                    <input type="hidden">
                                    <button type="submit" class="btn btn-outline-primary">Update</button>
                                </form>

                                <form action="/delete" method="post" class="m-3">
                                    <input type="hidden" name="studentId" value="<%=x._id%>">
                                    <button type="submit" class="btn btn-outline-danger"
                                        onclick="return confirm('Are you sure? want to delete?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <%}%>
                            <%} else {%>
                                <h1>no student data found</h1>
                                <%}%>
                </tbody>
            </table>
    </div>
    <%- include('includes/footer.ejs') %>